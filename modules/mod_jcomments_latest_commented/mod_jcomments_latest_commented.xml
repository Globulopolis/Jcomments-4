	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="Joomla\Module\LatestCommented\Site\Field">
				<field
					name="source"
					type="objectgroup"
					multiple="true"
					default="com_content"
					required="true"
					filter="string"
					layout="joomla.form.field.list-fancy-select"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_SOURCE_LABEL"
				/>

				<field
					name="catid"
					type="category"
					extension="com_content"
					multiple="true"
					default="0"
					size="10"
					filter="intarray"
					class="multipleCategories"
					required="true"
					layout="joomla.form.field.list-fancy-select"
					label="JCATEGORY"
					description="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_CATEGORY_DESC"
				>
					<option value="0">MOD_JCOMMENTS_LATEST_COMMENTED_OPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="count"
					type="text"
					default="5"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_ITEMS_LABEL"
					description="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_ITEMS_DESC"
				/>

				<field
					name="showCommentsCount"
					type="radio"
					default="1"
					layout="joomla.form.field.radio.switcher"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_COMMENTS_COUNT_LABEL"
					description="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_COMMENTS_COUNT_DESC"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>

	<updateservers>
