<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<field
				name="id"
				type="user"
				label="A_BLACKLIST_USER"
				validate="UserId"
				required="true"
		/>
	</fields>

	<fields name="labels">
		<fieldset name="jlabels" label="COM_JCOMMENTS_USERS_LABLELS" description="COM_JCOMMENTS_USERS_LABLELS_DESC">
			<field
					name="enable"
					type="list"
					default="0"
					label="COM_JCOMMENTS_USERS_LABLELS_ENABLE"
			>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field
					name="display_usergroup"
					type="text"
					default=""
					label="COM_JCOMMENTS_USERS_LABLELS_USERGROUP"
					description="COM_JCOMMENTS_USERS_LABLELS_USERGROUP_DESC"
			/>

			<field
					name="label_css"
					type="text"
					label="COM_JCOMMENTS_USERS_LABLELS_CSSCLASS"
					filter="string"
					default=""
					showon="enable:1"
					hint="COM_JCOMMENTS_USERS_LABLELS_CSSCLASS_HINT"
			/>

			<field
					name="box_css"
					type="text"
					label="COM_JCOMMENTS_USERS_LABLELS_BOXCLASS"
					filter="string"
					default=""
					showon="enable:1"
			/>
		</fieldset>
	</fields>
</form>
