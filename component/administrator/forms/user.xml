<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<field
				name="id"
				type="user"
				label="A_BLACKLIST_USER"
				validate="UserId"
				required="true"
		/>

		<field
				name="terms_of_use"
				id="terms_terms"
				type="radio"
				layout="joomla.form.field.radio.switcher"
				default="0"
				label="COM_JCOMMENTS_USERS_TOS"
				filter="integer"
		>
			<option value="0">COM_JCOMMENTS_USERS_TOS_DECLINE</option>
			<option value="1">COM_JCOMMENTS_USERS_TOS_ACCEPT</option>
		</field>
	</fields>

	<fields name="labels">
		<fieldset name="jlabels" label="COM_JCOMMENTS_USERS_LABELS" description="COM_JCOMMENTS_USERS_LABELS_DESC">
			<field
					name="enable"
					type="list"
					default="0"
					label="COM_JCOMMENTS_USERS_LABELS_ENABLE"
			>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field
					name="display_usergroup"
					type="text"
					default=""
					label="COM_JCOMMENTS_USERS_LABELS_USERGROUP"
					description="COM_JCOMMENTS_USERS_LABELS_USERGROUP_DESC"
			/>

			<field
					name="label_css"
					type="text"
					label="COM_JCOMMENTS_USERS_LABELS_CSSCLASS"
					filter="string"
					default=""
					showon="enable:1"
					hint="COM_JCOMMENTS_USERS_LABELS_CSSCLASS_HINT"
			/>

			<field
					name="group_css"
					type="text"
					label="COM_JCOMMENTS_USERS_LABELS_GROUPCLASS"
					filter="string"
					default=""
					showon="enable:1"
					hint="COM_JCOMMENTS_USERS_LABELS_GROUPCLASS_HINT"
			/>

			<field
					name="box_css"
					type="text"
					label="COM_JCOMMENTS_USERS_LABELS_BOXCLASS"
					filter="string"
					default=""
					showon="enable:1"
			/>
		</fieldset>
	</fields>
</form>
